# Project: Algoriscope
# Makefile created by Red Panda C++ 2.26.2249

CPP      = g++.exe
CC       = gcc.exe
WINDRES  = windres.exe
RES      = Algoriscope_private.res
OBJ      = color.o object.o scene.o render.o dynamics.o vector2.o main.o $(RES)
LINKOBJ  = color.o object.o scene.o render.o dynamics.o vector2.o main.o Algoriscope_private.res
CLEANOBJ  =  color.o object.o scene.o render.o dynamics.o vector2.o main.o  Algoriscope_private.res Algoriscope.exe
LIBS     =  -L"D:/GitHub/Algoriscope/Algoriscope/src/Algoriscope/libs" -lglfw3 -lglew32 -lopengl32 -lwinmm -lgdi32 -lfreetype
INCS     =   -I"D:/GitHub/Algoriscope/Algoriscope/src/Algoriscope" -I"D:/GitHub/Algoriscope/Algoriscope/src/Algoriscope/include"
CXXINCS  =   -I"D:/GitHub/Algoriscope/Algoriscope/src/Algoriscope" -I"D:/GitHub/Algoriscope/Algoriscope/src/Algoriscope/include"
BIN      = Algoriscope.exe
CXXFLAGS = $(CXXINCS)  -g3 -pipe -Wall -D__DEBUG__
CFLAGS   = $(INCS)  -g3 -pipe -Wall -D__DEBUG__
RM       = del /q /f
WINDRESFLAGS  = 

.PHONY: all all-before all-after clean clean-custom

all: all-before $(BIN) all-after

clean: clean-custom
	-$(RM) $(CLEANOBJ) > NUL 2>&1

$(BIN): $(OBJ)
	$(CPP) $(LINKOBJ) -o $(BIN) $(LIBS)

color.o: color.cpp color.h
	$(CPP) -c color.cpp -o color.o $(CXXFLAGS)  -finput-charset=UTF-8 -fexec-charset=gbk

object.o: object.cpp color.h object.h vector2.h dynamics.h
	$(CPP) -c object.cpp -o object.o $(CXXFLAGS)  -finput-charset=UTF-8 -fexec-charset=gbk

scene.o: scene.cpp color.h scene.h object.h vector2.h dynamics.h
	$(CPP) -c scene.cpp -o scene.o $(CXXFLAGS)  -finput-charset=UTF-8 -fexec-charset=gbk

render.o: render.cpp render.h shader.h
	$(CPP) -c render.cpp -o render.o $(CXXFLAGS)  -finput-charset=UTF-8 -fexec-charset=gbk

dynamics.o: dynamics.cpp color.h vector2.h dynamics.h
	$(CPP) -c dynamics.cpp -o dynamics.o $(CXXFLAGS) 

vector2.o: vector2.cpp vector2.h
	$(CPP) -c vector2.cpp -o vector2.o $(CXXFLAGS)  -finput-charset=UTF-8 -fexec-charset=gbk

main.o: main.cpp color.h scene.h render.h object.h vector2.h algoriscope.h dynamics.h shader.h
	$(CPP) -c main.cpp -o main.o $(CXXFLAGS)  -finput-charset=UTF-8 -fexec-charset=gbk

Algoriscope_private.res: Algoriscope_private.rc 
	$(WINDRES) -i Algoriscope_private.rc --input-format=rc -o Algoriscope_private.res -O coff $(WINDRESFLAGS) 

